<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">


    <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="#ee000000"
            android:layout_gravity="center|top">
        <RadioButton
                android:id="@+id/main_footbar_plus"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_plus"/>
        <RadioButton
                android:id="@+id/main_footbar_share"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_share"/>
        <RadioButton
                android:id="@+id/main_footbar_repeat"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_repeat"/>

        <RadioButton
                android:id="@+id/main_footbar_thumbs_up"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_thumbs_up"/>
        <RadioButton
                android:id="@+id/main_footbar_thumbs_down"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_thumbs_down"/>
        <RadioButton
                android:id="@+id/main_footbar_thumbs_cc"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_cc"/>
        <RadioButton
                android:id="@+id/main_footbar_thumbs_settings"
                style="@style/main_footbar_radio"
                android:drawableTop="@drawable/widget_bar_settings"/>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center|bottom"
            android:background="#50000000">

        <ImageView
                android:id="@+id/play_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/video_btn_on"/>

        <TextView
                android:id="@+id/play_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/play_btn"
                android:gravity="center_vertical"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

        <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/fullscreen"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:text="00:00"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

        <ImageButton
                android:id="@+id/fullscreen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:src="@drawable/mp_fullscreen"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"/>


        <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/total_time"
                android:layout_toRightOf="@+id/play_time"
                android:max="100"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:progress="0"
                android:thumbOffset="0dp"/>
        <!--  android:progressDrawable="@drawable/seekbar"
           android:thumb="@drawable/line_point" -->
    </RelativeLayout>


</FrameLayout>