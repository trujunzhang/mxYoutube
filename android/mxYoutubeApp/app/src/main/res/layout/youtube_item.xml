<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/solid_white">

    <!--line-01:[thumbnails,duration]-->
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >

        <ImageView
                android:id="@+id/thumbnails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/hqdefault"
                android:scaleType="fitXY" android:layout_gravity="center"/>

        <TextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:background="@color/duration_background"
                android:textSize="14sp"
                android:text="12:00"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom|right"/>
    </FrameLayout>

    <!--line-02:[title]-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/title"
                android:text="Sony Vegas Pro 13 - Tutorial for Beginners [COMPLETE]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textColor="@color/solid_black"
                android:maxLines="2"
                android:minLines="2"/>
    </LinearLayout>

    <!--line-03:[rating and statistics]-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="8dp"
                  android:layout_marginBottom="8dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mt_video_rating_count"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>
        <TextView
                android:id="@+id/rating"
                android:text="100%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="10sp"
                android:maxLines="2" android:layout_gravity="center_vertical"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mt_video_view_count"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"/>
        <TextView
                android:id="@+id/viewCount"
                android:text="117"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="10sp"
                android:maxLines="2" android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <!--line-04:[user]-->
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

    </LinearLayout>

